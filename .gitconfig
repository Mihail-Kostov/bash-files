[user]
    email   =   tbaltrushaitis@gmail.com
    name    =   "Baltrushaitis Tomas"

[alias]
    br      =   branch
    dir     =   branch

    cd      =   checkout
    ch      =   checkout
    ci      =   commit
    co      =   commit

    dc      =   diff --cached
    df      =   diff

    lg      =   log -p
    lol     =   log --graph --decorate --pretty=oneline --abbrev-commit
    lola    =   log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls      =   ls-files
    st      =   status

#    mersq  =   merge --squash
#    free   =   branch -D

    # Show files ignored by git:
    ign     =   ls-files -o -i --exclude-standard

[branch]
    autosetupmerge  =   true

[push]
    default         =   simple    #   simple, matching

[color]
    ui              =   auto   #   auto, true
[color "branch"]
    current         =   yellow reverse
    local           =   yellow
    remote          =   green
[color "diff"]
    meta            =   yellow bold
    frag            =   magenta bold
    old             =   red bold
    new             =   green bold
[color "status"]
    added           =   yellow
    changed         =   green
    untracked       =   cyan

[commit]
