# ~/.profile: executed by Bourne-compatible login shells.

if [ "$BASH" ]; then
  if [ -f ~/.bashrc ]; then
    . ~/.bashrc
  fi
fi

mesg n || true
echo -e "\n${BYellow}${SUDO_USER}${NC}, you are ${BRed}${USER}${NC} from now. ${BWhite}Be careful, please.${NC} \nThank you!\n"
date
printf "\n\n";
ii
